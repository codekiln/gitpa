    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ],
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        },
        {
            "name": "create_episode_page --reference --use-ref-ep-yml",
            "type": "debugpy",
            "request": "launch",
            "module": "gitp_acolyte.ceremonial.spells.episode_page.create_episode_page",
            "console": "integratedTerminal",
            "args": [
                "--reference",
                "--use-ref-ep-yml"
            ],
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        },
        {
            "name": "create_episode_page --reference",
            "type": "debugpy",
            "request": "launch",
            "module": "gitp_acolyte.ceremonial.spells.episode_page.create_episode_page",
            "console": "integratedTerminal",
            "args": [
                "--reference"
            ],
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        },
        {
            "name": "update_file_attrs 2024-12-04",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gitp-acolyte/gitp_acolyte/ceremonial/spells/episode_data/update/file_attrs/update_file_attrs.py",
            "console": "integratedTerminal",
            "args": [
                "2024-12-04"
            ],
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        }
    ]
}