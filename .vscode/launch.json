{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ],
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        },
        {
            "name": "Run create_episode_page with reference and use-ref-ep-yml",
            "type": "debugpy",
            "request": "launch",
            "module": "gitp_acolyte.ceremonial.spells.episode_page.create_episode_page",
            "console": "integratedTerminal",
            "args": [
                "--reference",
                "--use-ref-ep-yml"
            ],
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        }
    ]
}